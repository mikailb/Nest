@model Nest.Models.Comment
<!-- Delete note page to make sure you dont missclick delete -->

<h2>Delete Comment</h2>

<p>Are you sure you want to delete this comment?</p>
<div>
    <p><strong>Comment:</strong> @Model.CommentDescription</p>
    <p><small><strong>Written:</strong> @Model.CommentTime.ToString("yyyy-MM-dd HH:mm")</small></p>
</div>

<form asp-action="DeleteConfirmedCommentNote" asp-route-id="@Model.CommentId" asp-route-source="@TempData["Source"]" method="post">
    <input type="hidden" name="source" value="@TempData["Source"]" /> <!-- Keep track of the source to redirect properly -->
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@((TempData["Source"] as string) == "Notes" ? Url.Action("Notes", "Note") : Url.Action("MyPage", "Note"))" class="btn btn-secondary">Cancel</a>
</form>
