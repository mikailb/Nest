@model Nest.Models.Comment
<!-- Seperate page/form to Edit your Comment for picture -->
<h2>Edit Comment</h2>

<form asp-action="EditComment" asp-route-id="@Model.CommentId" method="post">
    <input type="hidden" asp-for="CommentId" /> <!-- Hidden field for CommentId -->
    <input type="hidden" name="source" value="@TempData["Source"]" /> <!-- Hidden field for Source -->

    <div class="form-group">
        <label for="CommentDescription">Comment</label>
        <textarea asp-for="CommentDescription" class="form-control" rows="4"></textarea>
        <span asp-validation-for="CommentDescription" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a href="@((TempData["Source"] as string) == "MyPage" ? Url.Action("MyPage", "Picture") : Url.Action("Grid", "Picture"))" class="btn btn-secondary">Cancel</a>
</form>