@model Nest.Models.Picture

<h2>Upload New Image</h2>
<!-- Form for creating image post -->
<form method="post" enctype="multipart/form-data" asp-action="Create" asp-controller="Picture">
    <div>
        <label for="Title">Title</label>
        <input type="text" asp-for="Title" id="Title" class="form-control" />
    </div>

    <div>
        <label for="Description">Description</label>
        <textarea asp-for="Description" id="Description" class="form-control"></textarea>
    </div>

    <div>
        <label for="PictureUrl">Select Image</label>
        <input type="file" asp-for="PictureUrl" id="PictureUrl" class="form-control" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Upload</button>
        <a asp-action="MyPage" asp-controller="Picture" class="btn btn-secondary">Cancel</a>
    </div>
</form>
