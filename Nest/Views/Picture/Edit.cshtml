@model Nest.Models.Picture

<h2>Edit Image</h2>
<!-- Seperate form/page to Edit picture description and title -->
<form asp-action="Edit" asp-route-id="@Model.PictureId" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="PictureId" />
    <input type="hidden" name="source" value="@TempData["Source"]" />

    <div>
        <label>Title</label>
        <input type="text" asp-for="Title" class="form-control" />
    </div>

    <div>
        <label>Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <!-- Button to Save  -->
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a href="@((TempData["Source"] as string) == "MyPage" ? Url.Action("MyPage", "Picture") : Url.Action("Grid", "Picture"))" class="btn btn-secondary">Cancel</a>
    </div>
</form>
