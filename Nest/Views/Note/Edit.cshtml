@model Nest.Models.Note

<h2>Edit Note</h2>
<!-- Seperate page/form to Edit your note -->
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="NoteId" />
    <input type="hidden" name="source" value="@TempData["Source"]" /> <!-- Add hidden field for source -->

    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Content">Content</label>
        <textarea asp-for="Content" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save Changes</button>
    <a href="@((TempData["Source"] as string) == "MyPage" ? Url.Action("MyPage", "Note") : Url.Action("Notes", "Note"))" class="btn btn-secondary mt-2">Cancel</a> <!-- Redirect based on source -->
</form>
