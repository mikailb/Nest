@model Nest.Models.Note

<h2>Create a Note</h2>
<!-- A form for creating A note -->
<form asp-action="Create" asp-controller="Note" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label for="Title">Title</label>
        <input asp-for="Title" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Content">Caption</label>
        <textarea asp-for="Content" class="form-control" required></textarea>
    </div>
    <button type="submit" class="btn create-btn">Create</button>
</form>
